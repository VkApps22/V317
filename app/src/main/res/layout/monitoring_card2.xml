            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/monitoring_number_name_text"
            app:layout_constraintEnd_toStartOf="@id/monitoring_show_detail"
            app:layout_constraintTop_toTopOf="@+id/monitoring_name_text" />


